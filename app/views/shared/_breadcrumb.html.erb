<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <% item&.self_and_ancestors&.each do |i| %>
      <li class="breadcrumb-item">
        <% if item == i %>
          <%= tag.span i.name %>
        <% else %>
          <%= link_to i.name, link&.call(i) %>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>