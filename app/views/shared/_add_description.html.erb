<div class="app-card app-card-settings shadow-sm p-4">
  <div class="app-card-body">
    <%= form_with model: [:accounting, item], method: :patch do |f| %>
      <div class="mb-2"><strong>Заметки:</strong></div>
      <div class="mb-2">
        <%= f.text_area :description, class: "w-100 form-control", rows: "8" %>
      </div>
      <div class="row justify-content-end">
        <div class="col-auto">
          <%= f.button :submit, class: "btn app-btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>