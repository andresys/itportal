<%= turbo_frame_tag "accounting" do %>
  <%= form_with model: [:accounting, material] do |f| %>
    <%= render "shared/errors", model: material %>
    
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: t('.name'), readonly: material.code %>
    </div>

    <div class="mb-3">
      <%= f.label :type_id, class: "form-label" %>
      <%= f.collection_select :type_id,
            AssetType.all, :id, :name,
            { include_blank: true },
            { class: "form-control js-select", placeholder: t('.type'), autocomplete: "off" } %>
    </div>

    <div class="form-actions text-center">
      <%= link_to t(:cancel), [:accounting, material], class: "btn app-btn-secondary", data: { turbo: turbo_frame_request? } %>
      <%= f.button :submit, class: "btn app-btn-primary", data: { turbo: turbo_frame_request? } %>
    </div>
  <% end %>
<% end %>