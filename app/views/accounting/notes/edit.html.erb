<% provide :page_title, "Заметки" %>

<%= page_title @note.noteble&.name, @back_url %>

<div class="table-responsive d-flex gap-2">
  <%= render partial: "shared/accounting/image_card", collection: @note.images, as: :image %>
</div>

<%= tag.hr class: "mb-4" if @note.images.any? %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование заметки</span>
          <%= link_to bs_icon('trash'), [:accounting, @note], class: "ms-auto", method: :delete, data: { confirm: t(:confirm) } %>
        </h4>

        <%= render 'form', note: @note %>
      </div>
    </div>
  </div>
</div>