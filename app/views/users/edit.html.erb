<% provide :page_title, "Пользователи" %>

<%= page_title "Редактирование пользователя", @back_url %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-8">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование пользователя</span>
          <%= link_to bs_icon('trash'), [@user], class: "ms-auto", data: { turbo_method: :delete, turbo_confirm: t(:confirm) } %>
        </h4>

        <%= render 'form', user: @user %>
      </div>
    </div>
  </div>
</div>