<%= panel_tag class: "d-flex justify-content-end gap-2" do %>
  <% if @user.approved %>
    <%= button_to [:approved, @user], class: "btn btn-sm btn-outline-danger py-0", method: :delete, data: { turbo_confirm: t('global.confirm') } do %>
      <%= t('.remove_approved') %>
    <% end if policy(@user).destroy_approved? %>
  <% else %>
    <%= button_to [:approved, @user], class: "btn btn-sm btn-outline-secondary py-0" do %>
      <%= t('.approved') %>
    <% end if policy(@user).create_approved? %>
  <% end %>

  <%= button_to [@user], class: "btn btn-sm btn-outline-danger py-0", method: :delete, data: { turbo_confirm: t('global.confirm') } do %>
    <%= t('.remove_user') %>
  <% end if policy(@user).destroy? %>
<% end %>