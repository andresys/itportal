<%= tag.div class: "d-flex justify-content-end gap-2" do %>
  <%= button_to [@user, :approveds], class: "btn btn-outline-secondary" do %>
    <%= bs_icon('check2-all') %>
    <%= tag.span t('.approved') %>
  <% end if !@user.approved && policy(:approved).create? %>

  <%= button_to [@user, :approveds], class: "btn btn-outline-danger", method: :delete, data: { turbo_confirm: t('global.confirm') } do %>
    <%= bs_icon('trash') %>
    <%= tag.span t('.remove_approved') %>
  <% end if @user.approved && policy(:approved).destroy? %>

  <%= button_to [@user], class: "btn btn-outline-danger", method: :delete, data: { turbo_confirm: t('global.confirm') } do %>
    <%= bs_icon('trash') %>
    <%= tag.span t('.remove_user') %>
  <% end if policy(:user).destroy? %>
<% end %>