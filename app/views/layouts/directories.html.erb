<% provide :page_title, t(".#{controller_name}") %>

<%= page_title t '.title' do %>
  <%= yield :title %>
<% end %>

<%= yield(:filter) %>

<%= render "shared/nav_tabs", items: ['organizations', 'employees', 'mols', 'locations', 'asset_types'], url: lambda {|name, val| [:directories, (val || name).to_sym]}, active: lambda {|name, val| controller_name == (val || name)} %>

<%= yield %>

<% parent_layout :application %>