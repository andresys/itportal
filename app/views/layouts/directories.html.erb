<div class="row g-3 mb-4 align-items-center justify-content-between">
  <div class="col-auto">
    <h1 class="app-page-title mb-0"><%= t '.title' %></h1>
  </div>
  <div class="col-auto">
    <%= yield :title %>
  </div>
</div>

<nav class="orders-table-tab app-nav-tabs nav shadow-sm flex-column flex-sm-row mb-1">
  <% @tabs.each do |tab| %>
    <%= link_to t(".#{tab}"), [:directories, tab], class: "flex-sm-fill text-sm-center nav-link#{' active' if controller_name == tab.to_s}" %>
  <% end %>
</nav>

<%= yield %>

<% parent_layout :application %>