<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование места хранения</span>
          <%= link_to bs_icon('trash'), [:directories, @location], class: "ms-auto", method: :delete, data: { confirm: t(:confirm) } %>
        </h4>

        <div class="mb-3">
          <%= label_tag :location, t(:location), class: "form-label" %>
          <%= render partial: 'shared/breadcrumb', locals: {item: @location.parent, link: lambda {|l| new_directories_location_path(@location, location: {parent_id: l})} } %>
        </div>

        <%= render 'form', location: @location %>
      </div>
    </div>
  </div>
</div>