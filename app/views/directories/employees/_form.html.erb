<%= form_with model: [:directories, employee] do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-4">
      <div class="mb-3">
        <%= f.label :images, class: "btn btn-sm" do |lebel| %>
          <%= bs_icon :upload %>
          <%= lebel %>
        <% end %>
        <%= f.file_field :images, accept: "image/*", multiple: true, class: "d-none image-preview" %>
      </div>

    </div>

    <div class="col-8">
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: t('.name'), readonly: employee.code %>
      </div>

      <div class="mb-3">
        <%= f.label :department_id, class: "form-label" %>
        <%= f.collection_select :department_id,
              Department.all, :id, :name,
              { include_blank: true },
              { class: "form-control js-select", placeholder: t('.department'), autocomplete: "off" } %>
      </div>

      <div class="mb-3">
        <%= f.label :title_id, class: "form-label" %>
        <%= f.collection_select :title_id,
              Title.all, :id, :name,
              { include_blank: true },
              { class: "form-control js-select", placeholder: t('.title'), autocomplete: "off" } %>
      </div>
    </div>
  </div>

  <div class="form-actions text-center">
    <%= link_to t(:cancel), directories_employees_path, class: "btn app-btn-secondary" %>
    <%= f.button :submit, class: "btn app-btn-primary" %>
  </div>
<% end %>