<%= render "shared/errors", model: organization %>

<%= form_with model: [:directories, organization] do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: t('.name'), readonly: organization.code %>
  </div>

  <div class="form-actions text-center">
    <%= link_to t('global.cancel'), @back_url, class: "btn btn-outline-secondary" %>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>