<% provide :page_title, "Справочник [организации]" %>

<%= page_title @organization.name, @back_url %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-8">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование организации</span>
          <%= link_to bs_icon('trash'), [:directories, @organization], class: "ms-auto", method: :delete, data: { confirm: t(:confirm) } if @organization.code.nil? %>
        </h4>

        <%= render 'form', organization: @organization %>
      </div>
    </div>
  </div>
</div>