<% provide :page_title, "Штатное расписание" %>

<%= page_title @title.organization.name, @back_url %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование штатной единици</span>
          <%= link_to bs_icon('trash'), [:directories, @organization, @title], class: "ms-auto", data: { turbo_method: :delete, turbo_confirm: t('global.confirm') } %>
        </h4>

        <%= render 'form', title: @title %>
      </div>
    </div>
  </div>
</div>