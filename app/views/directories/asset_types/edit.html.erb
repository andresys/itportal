<% provide :page_title, "Тип ресурса" %>

<%= page_title @asset_type.name, @back_url %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <div class="app-card app-card-settings shadow-sm p-4">
      <div class="app-card-body">
        <h4 class="card-title mb-3 d-flex">
          <span>Редактирование типа ресурса</span>
          <%= link_to bs_icon('trash'), [:directories, @asset_type], class: "ms-auto", data: { turbo_method: :delete, turbo_confirm: t(:confirm) } %>
        </h4>

        <%= render 'form', asset_type: @asset_type %>
      </div>
    </div>
  </div>
</div>