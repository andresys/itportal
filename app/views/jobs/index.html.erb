<% provide :page_title, "Фоновые задачи" %>

<%= page_title "Фоновые задачи" do %>
  <%= link_to [:new, :job], class: "btn btn-primary flex-fill" do %>
    <%= bs_icon 'file-plus' %>
    <%= t('.new') %>
  <% end %>
<% end %>

<div class="tab-content">
  <div class="tab-pane fade show active">
    <div class="app-card app-card-orders-table shadow-sm mb-5">
      <div class="app-card-body">
        <div class="table-responsive">
          <table class="table app-table-hover mb-0 text-left">
            <thead>
              <tr>
                <th class="cell text-center">Дата старта</th>
                <th class="cell text-center">Дата завершения</th>
                <th class="cell">Тип задачи</th>
                <th class="cell">Статус выполнения</th>
              </tr>
            </thead>
            <tbody>
              <%= render @jobs %>
            </tbody>
          </table>
        </div><!--//table-responsive-->
      </div><!--//app-card-body-->		
    </div><!--//app-card-->

    <%= render partial: "shared/paginate", locals: { items: @jobs, link: lambda {|q| jobs_path(q)} } %>
  </div><!--//tab-pane-->
</div><!--//tab-content-->