<div class="auth-option text-center pt-5">
  <% if controller_name != 'sessions' %>
    <div>
      Already have an account?
      <%= link_to "Log In", [:new, resource_name, :session], class: "text-link" %><br />
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      No account?
      <%= link_to "Sign Up", [:new, resource_name, :registration], class: "text-link" %><br />
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      Forgot your password?
      <%= link_to "Restore", [:new, resource_name, :password], class: "text-link" %><br />
    </div>
  <% end %>
</div>

<div class="auth-option text-center pt-3">
  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      Didn't receive confirmation instructions?
      <%= link_to "Resend", [:new, resource_name, :confirmation], class: "text-link" %><br />
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      Didn't receive unlock instructions?
      <%= link_to "Resend", [:new, resource_name, :unlock], class: "text-link" %><br />
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>