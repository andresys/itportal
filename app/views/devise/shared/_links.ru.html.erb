<div class="auth-option text-center pt-5">
  <%- if controller_name != 'sessions' %>
    <div>
      Уже есть аккаунт?
      <%= link_to "Войти", [:new, resource_name, :session], class: "text-link" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      Нет аккаунта?
      <%= link_to "Регистрация", [:new, resource_name, :registration], class: "text-link" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      Забыли пароль?
      <%= link_to "Восстановить", [:new, resource_name, :password], class: "text-link" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      Не получили инструкцию подтверждения?
      <%= link_to "Выслать", [:new, resource_name, :confirmation], class: "text-link" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      Не получили инструкцию разблокировки?
      <%= link_to "Выслать", [:new, resource_name, :unlock], class: "text-link" %><br />
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Войти через #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>